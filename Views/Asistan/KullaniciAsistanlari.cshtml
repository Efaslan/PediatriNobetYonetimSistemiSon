@model IEnumerable<PediatriNobetYonetimSistemi.Models.Asistan>

@{
    ViewData["Title"] = "Asistanlar";
}

<h2 class ="text-center mb-5">Asistanlarımız</h2>

<div class="row">
    @foreach (var asistan in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <!-- Profil Fotoğrafı -->
                <img src="~/images/default-profile.png" class="card-img-top" alt="Profil Fotoğrafı">

                <div class="card-body">
                    <h5 class="card-title">@asistan.Ad @asistan.Soyad</h5>
                    <p class="card-text">
                        <strong>Departman:</strong> @asistan.Departman.DepartmanAdi <br />
                        <strong>E-posta:</strong> @asistan.Mail
                    </p>
                </div>
            </div>
        </div>
    }
    
</div>
