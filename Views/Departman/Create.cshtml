@model PediatriNobetYonetimSistemi.Models.Departman

@{
    ViewData["Title"] = "Yeni Departman Ekle";
}

<h2>@ViewData["Title"]</h2>

<h4>Departman</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label class="control-label">Departman Adı</label>
        <input asp-for="DepartmanAdi" class="form-control" />
        <span asp-validation-for="DepartmanAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Departman Tanımı</label>
        <textarea asp-for="BolumTanimi" class="form-control"></textarea>
        <span asp-validation-for="BolumTanimi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Yatak Sayısı</label>
        <input asp-for="YatakSayisi" class="form-control" type="number" />
        <span asp-validation-for="YatakSayisi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a href="@Url.Action("Index", "Departman")" class="btn btn-secondary">Geri</a>
</form>
