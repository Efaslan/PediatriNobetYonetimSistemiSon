@model IEnumerable<PediatriNobetYonetimSistemi.Models.Departman>

@{
    ViewData["Title"] = "Departmanlar";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create", "Departman")" class="btn btn-primary">Yeni Departman Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th>Departman Tanımı</th>
            <th>Yatak Sayıları</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td>@departman.DepartmanAdi</td>
                <td>@departman.BolumTanimi</td>
                <td>@departman.YatakSayisi</td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Departman", new { id = departman.DepartmanId })">Düzenle</a> |
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Departman", new { id = departman.DepartmanId })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
