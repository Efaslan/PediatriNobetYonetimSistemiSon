@model IEnumerable<PediatriNobetYonetimSistemi.Models.Departman>

@{
    ViewData["Title"] = "Departmanlar";
}

<h2 class="text-center mb-5">Departmanlarımız</h2>

<!-- Genel Bilgilendirme -->
<div class="text-center mb-4">
    <p class="fs-5">3 departmanımızda <strong>15 asistan</strong>, <strong>15 hocamız</strong> ile toplam <strong>30 sağlık çalışanı</strong> olarak hizmetinizdeyiz.</p>
</div>

<div class="row">
    @foreach (var departman in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="background-color:@GetBackgroundColor(departman.DepartmanAdi)">
                <!-- Resim Alanı -->
                <img src="@GetImagePath(departman.DepartmanAdi)" class="card-img-top" alt="@departman.DepartmanAdi Resmi" style="height: 200px; object-fit: cover;">

                <div class="card-body text-white">
                    <!-- Departman Adı -->
                    <h4 class="card-title text-center">@departman.DepartmanAdi</h4>
                    <!-- Tanım -->
                    <p class="card-text">@departman.BolumTanimi</p>
                </div>
            </div>
        </div>
    }
    @functions {
        private string GetImagePath(string departmanAdi)
        {
            return departmanAdi switch
            {
                "Çocuk Yoğun Bakım" => "/images/cocuk-yogun-bakim.jpg",
                "Çocuk Acil" => "/images/cocuk-acil.jpg",
                "Çocuk Hematolojisi ve Onkolojisi" => "/images/cocuk-hematolojisi-ve-onkolojisi.jpg",
                _ => "/images/default-profile.png"
            };
        }

        private string GetBackgroundColor(string departmanAdi)
        {
            return departmanAdi switch
            {
                "Çocuk Yoğun Bakım" => "#FF6F61",  // Kırmızı ton
                "Çocuk Acil" => "#6B8E23",         // Yeşil ton
                "Çocuk Hematolojisi ve Onkolojisi" => "#4682B4",  // Mavi ton
                _ => "#D3D3D3"                     // Varsayılan gri
            };
        }
    }

</div>
