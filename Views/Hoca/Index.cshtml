@model IEnumerable<PediatriNobetYonetimSistemi.Models.Hoca>

<h2>Hocalar</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Hoca Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ad)</th>
            <th>@Html.DisplayNameFor(model => model.Soyad)</th>
            <th>@Html.DisplayNameFor(model => model.Mail)</th>
            <th>Departman Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Mail</td>
                <td>@item.Departman?.DepartmanAdi</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
