@model PediatriNobetYonetimSistemi.Models.Nobet

<h2>Yeni Nöbet Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BaslamaTarihi" class="control-label">Başlama Tarihi</label>
        <input asp-for="BaslamaTarihi" class="form-control" type="date" />
        <span asp-validation-for="BaslamaTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BaslamaSaati" class="control-label">Başlama Saati</label>
        <input asp-for="BaslamaSaati" class="form-control" type="time" />
        <span asp-validation-for="BaslamaSaati" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BitisTarihi" class="control-label">Bitiş Tarihi</label>
        <input asp-for="BitisTarihi" class="form-control" type="date" />
        <span asp-validation-for="BitisTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BitisSaati" class="control-label">Bitiş Saati</label>
        <input asp-for="BitisSaati" class="form-control" type="time" />
        <span asp-validation-for="BitisSaati" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AsistanId" class="control-label">Asistan</label>
        <select asp-for="AsistanId" class="form-control" asp-items="@(ViewData["AsistanId"] as IEnumerable<SelectListItem>)">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="AsistanId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmanId" class="control-label">Departman</label>
        <select asp-for="DepartmanId" class="form-control" asp-items="@(ViewData["DepartmanId"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="DepartmanId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
</form>
