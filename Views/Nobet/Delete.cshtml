@model PediatriNobetYonetimSistemi.Models.Nobet

<h2>Nöbet Sil</h2>

<h4>@Model.BaslamaTarihi.ToShortDateString() - @Model.BaslamaSaati tarihinde, @Model.Asistan.Ad için nöbeti silmek istediğinizden emin misiniz?</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>
