@model IEnumerable<PediatriNobetYonetimSistemi.Models.Nobet>

<h2>Nöbetler</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Nöbet Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Başlama Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Nöbet Tutacak Asistan</th>
            <th>Nöbet Tutulacak Departman</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BaslamaTarihi.ToShortDateString() @item.BaslamaSaati</td>
                <td>@item.BitisTarihi.ToShortDateString() @item.BitisSaati</td>
                <td>@($"{item.Asistan.Departman.DepartmanAdi} - {item.Asistan.Ad} {item.Asistan.Soyad}")</td>
                <td>@item.Departman.DepartmanAdi</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
