@model IEnumerable<PediatriNobetYonetimSistemi.Models.Randevu>

<h2>Randevular</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Randevu Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tarih)</th>
            <th>Hoca</th>
            <th>Asistan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tarih</td>
                <td>@($"{item.Hoca.Departman.DepartmanAdi} - {item.Hoca.Ad} {item.Hoca.Soyad}")</td>
                <td>@($"{item.Asistan.Departman.DepartmanAdi} - {item.Asistan.Ad} {item.Asistan.Soyad}")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
